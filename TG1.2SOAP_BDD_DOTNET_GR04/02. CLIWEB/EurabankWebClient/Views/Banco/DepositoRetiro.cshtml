@model EurabankWebClient.Models.DepositoRetiroViewModel
@{
    ViewData["Title"] = Model.TipoOperacion == "DEPOSITO" ? "Dep�sito" : "Retiro";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EURABANK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html, body {
            height: 100%;
            width: 100%;
        }
        body {
            background: white;
            display: flex;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .sidebar {
            background: white;
            width: 250px;
            height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 30px 20px;
            gap: 15px;
            border-right: 1px solid #e0e0e0;
        }
        .sidebar-btn {
            padding: 12px 20px;
            border: none;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            cursor: not-allowed;
            transition: all 0.3s;
            text-align: center;
            opacity: 0.9;
        }
        .sidebar-btn-deposito {
            background: #4CAF50;
            color: white;
        }
        .sidebar-btn-retiro {
            background: #f44336;
            color: white;
        }
        .sidebar-btn-transferencia {
            background: #FFC107;
            color: #333;
        }
        .sidebar-btn-movimientos {
            background: #6c757d;
            color: white;
        }
        .main-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .form-container {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
            border: 1px solid #e0e0e0;
        }
        .form-title {
            text-align: center;
            color: #333;
            margin-bottom: 10px;
            font-weight: bold;
            font-size: 28px;
        }
        .form-subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 18px;
        }
        .form-label {
            color: #555;
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }
        .form-control-custom {
            width: 100%;
            padding: 12px 20px;
            border: 2px solid #ddd;
            border-radius: 25px;
            font-size: 16px;
            transition: all 0.3s;
        }
        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 10px rgba(102, 126, 234, 0.2);
        }
        .btn-submit {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 12px 40px;
            border-radius: 25px;
            font-size: 18px;
            font-weight: 600;
            width: 100%;
            margin-top: 20px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .btn-submit:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }
        .btn-back {
            background: #6c757d;
            color: white;
            border: none;
            padding: 10px 30px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 500;
            width: 100%;
            margin-top: 10px;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
        .btn-back:hover {
            background: #5a6268;
            color: white;
        }
        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
            border: 1px solid #f5c6cb;
        }
        .deposito-title {
            color: #4CAF50;
        }
        .retiro-title {
            color: #f44336;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <button class="sidebar-btn sidebar-btn-deposito">Depósito</button>
        <button class="sidebar-btn sidebar-btn-retiro">Retiro</button>
        <button class="sidebar-btn sidebar-btn-transferencia">Transferencia</button>
        <button class="sidebar-btn sidebar-btn-movimientos">Movimientos</button>
    </div>
    <div class="main-content">
        <div class="form-container">
        <h1 class="form-title @(Model.TipoOperacion == "DEPOSITO" ? "deposito-title" : "retiro-title")">
            @(Model.TipoOperacion == "DEPOSITO" ? "Dep�sito" : "Retiro")
        </h1>
        <h2 class="form-subtitle">Usuario: @Model.NombreCliente</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                <strong></strong> @ViewBag.Error
            </div>
        }

        <form method="post" asp-action="DepositoRetiro" asp-controller="Banco">
            <input type="hidden" asp-for="CodigoCliente" />
            <input type="hidden" asp-for="NombreCliente" />
            <input type="hidden" asp-for="TipoOperacion" />
            <input type="hidden" asp-for="CodigoCuenta" />

            <div class="form-group">
                <label class="form-label">Ingrese el Monto:</label>
                <input type="number" step="0.01" min="0.01" class="form-control-custom" 
                       asp-for="Monto" placeholder="0.00" required />
            </div>

            <button type="submit" class="btn-submit">Continuar</button>
        </form>

        <a href="@Url.Action("Index", "Banco")" class="btn-back">Volver</a>
        </div>
    </div>
</body>
</html>

