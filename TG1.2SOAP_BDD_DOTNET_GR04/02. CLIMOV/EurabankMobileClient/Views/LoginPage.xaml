<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EurabankMobileClient.ViewModels"
             x:Class="EurabankMobileClient.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <!-- Logo/Título sin el círculo EB -->
            <Label Text="EURABANK" FontSize="42" FontAttributes="Bold" 
                   HorizontalOptions="Center" TextColor="#667EEA"
                   Margin="0,40,0,10"/>
            
            <Label Text="Sistema Bancario Móvil" FontSize="16" 
                   HorizontalOptions="Center" TextColor="#666"/>

            <!-- Formulario de Login -->
            <Frame Padding="20" CornerRadius="15" HasShadow="True" 
                   BackgroundColor="White" Margin="0,30,0,0">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Usuario:" FontAttributes="Bold" TextColor="#555"/>
                    <Frame BorderColor="#DDD" HasShadow="False" Padding="0" CornerRadius="25" BackgroundColor="White">
                        <Entry Text="{Binding Usuario}" 
                               Placeholder="Ingrese su usuario"
                               PlaceholderColor="#999"
                               TextColor="#000"
                               BackgroundColor="Transparent"
                               FontSize="14"
                               Margin="15,10"/>
                    </Frame>

                    <Label Text="Contraseña:" FontAttributes="Bold" TextColor="#555" Margin="0,10,0,0"/>
                    <Frame BorderColor="#DDD" HasShadow="False" Padding="0" CornerRadius="25" BackgroundColor="White">
                        <Entry Text="{Binding Password}" 
                               Placeholder="Ingrese su contraseña"
                               PlaceholderColor="#999"
                               TextColor="#000"
                               BackgroundColor="Transparent"
                               IsPassword="True"
                               FontSize="14"
                               Margin="15,10"/>
                    </Frame>

                    <!-- Mensaje de Error -->
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#D32F2F" 
                           FontSize="14"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

                    <!-- Botón Login -->
                    <Button Text="INGRESAR" 
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="18"
                            CornerRadius="25"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"/>

                    <!-- Indicador de Carga -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                     IsVisible="{Binding IsBusy}"
                                     Color="#667EEA"
                                     HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <Label Text="Usuario: MONSTER / Contraseña: monster9" 
                   FontSize="12" TextColor="#999" 
                   HorizontalOptions="Center" Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
