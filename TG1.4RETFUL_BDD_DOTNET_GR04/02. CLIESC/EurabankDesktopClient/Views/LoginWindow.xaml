<Window x:Class="EurabankDesktopClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EurabankDesktopClient.ViewModels"
        Title="EURABANK - Inicio de Sesi칩n" 
        Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF667EEA">
    
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Border Background="White" 
                Width="420" Height="520"
                CornerRadius="15"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="5" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel Margin="40,60">
                <TextBlock Text="EURABANK"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#FF667EEA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Sistema Bancario"
                           FontSize="16"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <TextBlock Text="Usuario:"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Margin="0,0,0,8"/>
                
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="2"
                        CornerRadius="25"
                        Margin="0,0,0,20">
                    <TextBox x:Name="UsuarioTextBox"
                             Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             Padding="15,10"
                             BorderThickness="0"
                             Background="Transparent"/>
                </Border>

                <TextBlock Text="Contrase침a:"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Margin="0,0,0,8"/>
                
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="2"
                        CornerRadius="25"
                        Margin="0,0,0,30">
                    <PasswordBox x:Name="Contrase침aPasswordBox"
                                 FontSize="14"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 PasswordChanged="Contrase침aPasswordBox_PasswordChanged"/>
                </Border>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#D32F2F"
                           FontSize="13"
                           Margin="0,0,0,15"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="INGRESAR"
                        Command="{Binding LoginCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Height="45"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCC"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
